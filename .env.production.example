# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# ⚠️ IMPORTANT: Change all values before deploying
# Never commit actual production values to Git

# Database
# For Railway/Render, use the DATABASE_URL they provide
# Format: mysql://username:password@host:port/database
DATABASE_URL="mysql://inventory_user:CHANGE_THIS_PASSWORD@host:3306/inventorydb"

# JWT Configuration
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET="CHANGE_THIS_TO_A_LONG_RANDOM_STRING_AT_LEAST_32_CHARACTERS"
JWT_EXPIRES_IN="7d"

# Application
NODE_ENV="production"
PORT=3000

# Optional: Add if using external services
# REDIS_URL=""
# SMTP_HOST=""
# SMTP_PORT=""
# AWS_ACCESS_KEY=""
