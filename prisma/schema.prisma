// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  CLERK
}

enum StockMovementType {
  IN
  OUT
  ADJUST
}

enum PurchaseOrderStatus {
  DRAFT
  ORDERED
  RECEIVED
  CANCELLED
}

enum SalesOrderStatus {
  DRAFT
  CONFIRMED
  FULFILLED
  CANCELLED
}

enum ProductUnit {
  EA
  BOX
  KG
  L
}

enum TransactionType {
  INCOME
  EXPENSE
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  fullName     String
  role         UserRole  @default(CLERK)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?

  @@index([email])
  @@index([role])
  @@map("users")
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  products Product[]

  @@index([name])
  @@map("categories")
}

model Supplier {
  id          String    @id @default(uuid())
  name        String
  contactName String?
  phone       String?
  email       String?
  address     String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  purchaseOrders PurchaseOrder[]

  @@index([name])
  @@map("suppliers")
}

model Customer {
  id        String    @id @default(uuid())
  name      String
  phone     String?
  email     String?
  address   String?   @db.Text
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  salesOrders SalesOrder[]

  @@index([name])
  @@map("customers")
}

model Warehouse {
  id        String    @id @default(uuid())
  name      String    @unique
  location  String?   @db.Text
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  inventoryLevels InventoryLevel[]
  stockMovements  StockMovement[]

  @@index([name])
  @@map("warehouses")
}

model Product {
  id          String      @id @default(uuid())
  sku         String      @unique
  name        String
  description String?     @db.Text
  categoryId  String
  unit        ProductUnit @default(EA)
  minStock    Decimal?    @db.Decimal(18, 3)
  barcode     String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  deletedAt   DateTime?

  category            Category             @relation(fields: [categoryId], references: [id])
  inventoryLevels     InventoryLevel[]
  stockMovements      StockMovement[]
  purchaseOrderItems  PurchaseOrderItem[]
  salesOrderItems     SalesOrderItem[]

  @@index([sku])
  @@index([name])
  @@index([categoryId])
  @@map("products")
}

model InventoryLevel {
  id          String   @id @default(uuid())
  productId   String
  warehouseId String
  quantity    Decimal  @db.Decimal(18, 3)

  product   Product   @relation(fields: [productId], references: [id])
  warehouse Warehouse @relation(fields: [warehouseId], references: [id])

  @@unique([productId, warehouseId])
  @@index([productId])
  @@index([warehouseId])
  @@map("inventory_levels")
}

model StockMovement {
  id              String            @id @default(uuid())
  productId       String
  warehouseId     String
  type            StockMovementType
  quantity        Decimal           @db.Decimal(18, 3)
  reason          String?           @db.Text
  refDocument     String?
  salesOrderId    String?
  purchaseOrderId String?
  createdAt       DateTime          @default(now())

  product   Product   @relation(fields: [productId], references: [id])
  warehouse Warehouse @relation(fields: [warehouseId], references: [id])

  @@index([productId])
  @@index([warehouseId])
  @@index([type])
  @@index([salesOrderId])
  @@index([purchaseOrderId])
  @@index([createdAt])
  @@map("stock_movements")
}

model PurchaseOrder {
  id         String              @id @default(uuid())
  supplierId String
  status     PurchaseOrderStatus @default(DRAFT)
  expectedAt DateTime?
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
  deletedAt  DateTime?

  supplier Supplier              @relation(fields: [supplierId], references: [id])
  items    PurchaseOrderItem[]

  @@index([supplierId])
  @@index([status])
  @@index([createdAt])
  @@map("purchase_orders")
}

model PurchaseOrderItem {
  id              String  @id @default(uuid())
  purchaseOrderId String
  productId       String
  qtyOrdered      Decimal @db.Decimal(18, 3)
  qtyReceived     Decimal @default(0) @db.Decimal(18, 3)
  unitPrice       Decimal @db.Decimal(18, 2)

  purchaseOrder PurchaseOrder @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  product       Product       @relation(fields: [productId], references: [id])

  @@index([purchaseOrderId])
  @@index([productId])
  @@map("purchase_order_items")
}

model SalesOrder {
  id         String           @id @default(uuid())
  customerId String
  status     SalesOrderStatus @default(DRAFT)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  deletedAt  DateTime?

  customer Customer         @relation(fields: [customerId], references: [id])
  items    SalesOrderItem[]

  @@index([customerId])
  @@index([status])
  @@index([createdAt])
  @@map("sales_orders")
}

model SalesOrderItem {
  id           String  @id @default(uuid())
  salesOrderId String
  productId    String
  qty          Decimal @db.Decimal(18, 3)
  unitPrice    Decimal @db.Decimal(18, 2)
  discount     Decimal? @default(0) @db.Decimal(18, 2)

  salesOrder SalesOrder @relation(fields: [salesOrderId], references: [id], onDelete: Cascade)
  product    Product    @relation(fields: [productId], references: [id])

  @@index([salesOrderId])
  @@index([productId])
  @@map("sales_order_items")
}

model FinancialCategory {
  id        String           @id @default(uuid())
  name      String           @unique
  type      TransactionType
  color     String?          @default("#6B7280")
  icon      String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  deletedAt DateTime?

  transactions Transaction[]

  @@index([type])
  @@map("financial_categories")
}

model Transaction {
  id                String           @id @default(uuid())
  type              TransactionType
  categoryId        String
  amount            Decimal          @db.Decimal(18, 2)
  description       String?          @db.Text
  transactionDate   DateTime         @default(now())
  reference         String?
  salesOrderId      String?
  purchaseOrderId   String?
  createdBy         String
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  deletedAt         DateTime?

  category FinancialCategory @relation(fields: [categoryId], references: [id])

  @@index([type])
  @@index([categoryId])
  @@index([transactionDate])
  @@index([salesOrderId])
  @@index([purchaseOrderId])
  @@index([createdBy])
  @@map("transactions")
}
